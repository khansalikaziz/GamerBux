#: import utils kivy.utils
<Dashboard>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#000000")
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:


        Image:
            source: "Images/shooting.jpg"
            size_hint: 1,0.5
            pos_hint: {"top": 0.95 , "left": 1}





        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#b6d7ff")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "Play Now"
            color: (0,0,0,1)
            size_hint: 0.4,0.1
            pos_hint: {"top": 0.4 , "right": 0.7}
            on_release:
                app.visitgame()
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#b6d7ff")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "Chat Now"
            color: (0,0,0,1)
            size_hint: 0.1,0.1
            pos_hint: {"top": 0.2 , "right": 0.98}
            on_release:
                app.visitchatbot()