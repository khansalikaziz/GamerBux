#: import utils kivy.utils

<ForgotPasswordScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#000000")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#b6d7ff")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "Back"
            color: (0,0,0,1)
            size_hint: 0.3,0.1
            pos_hint: {"top": 0.9 , "right": 0.4}
            on_release:
                app.change_screen("login_screen")

        Label:
            text: "[u][b]Trouble Logging in?[/b][/u]"
            size_hint: 0.8,0.1
            pos_hint: {"top": 0.8 , "right": 0.9}
            markup: True

        Label:
            text: "[b]Enter your email and we'll \n send you a link to get back into your \n account[/b]"
            size_hint: 0.8,0.1
            pos_hint: {"top": 0.7 , "right": 0.9}
            markup: True
            halign: 'center'
            color: utils.get_color_from_hex("#808080")

        TextInput:
            id: forgot_email
            hint_text: "Email"
            size_hint: 0.8,0.1
            pos_hint: {"top": 0.55 , "right": 0.9}
            multiline: False

        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#b6d7ff")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "Send Login Link"
            color: (0,0,0,1)
            size_hint: 0.4,0.1
            pos_hint: {"top": 0.4 , "right": 0.7}
            on_release:
                app.my_firebase.forgot_password(forgot_email.text)

        Label:
            size_hint: 0.8,0.1
            pos_hint: {"top": 0.3 , "right": 0.9}
            markup: True
            id: forgot_message